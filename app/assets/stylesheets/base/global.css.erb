@font-face {
  font-family: 'Belleza';
  src: url('fonts/Belleza-Regular.ttf') format('truetype');
  font-style: normal;
  font-weight: 400;
  font-display: swap;
}

@font-face {
  font-family: 'RobotoMono';
  src: url('fonts/RobotoMono-VariableFont.ttf') format('truetype');
  font-style: normal;
  font-weight: 600;
  font-display: swap;
}

* {
  margin: 0;
  padding: 0;
}

html {
  box-sizing: border-box;
  height: 100%;
  height: 100%;
}

*,
*::before,
*::after {
  box-sizing: inherit;
}

body {
  height: 100%;
  margin: 0;
  height: 100%;
  font-weight: 800;
  font-family: 'RobotoMono-VariableFont', sans-serif !important;
}

img {
  display: block;
  max-width: 100%;
  height: auto;
}

a {
  text-decoration: none;
}

ul,
li {
  list-style: none;
}

